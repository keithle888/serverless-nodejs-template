{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "./src"
  },
  "exclude": ["tests/**/*", "jest.config.ts"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
